{
    "variables": {
        "ssh_user": "test",
        "ssh_pass": "123",
        "http_port_min": "{{env `HTTP_PORT`}}{{env `HTTP_PORT_MIN`}}",
        "http_port_max": "{{env `HTTP_PORT`}}{{env `HTTP_PORT_MAX`}}"
    },

    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "vm_name": "alt-server-p8",
            "disk_size": 30000,
            "disk_cache": "unsafe",
            "output_directory": "output",
            "headless": false,
            "qemuargs": [
                [ "-m", "2048M" ]
            ],

            "iso_url": "http://mirror.yandex.ru/altlinux/p8/images/server/alt-8-server-x86_64.iso",
            "iso_checksum": "719d43ed40dc5774c8e40166746856d5b94e41c5",
            "iso_checksum_type": "sha1",

            "http_port_min": "{{user `http_port_min`}}",
            "http_port_max": "{{user `http_port_max`}}",

            "ssh_username": "{{ user `ssh_user` }}",
            "ssh_password": "{{ user `ssh_pass` }}",
            "ssh_wait_timeout": "60m",
            "ssh_pty": true,

            "http_directory": "./",

            "boot_wait": "2s",
            "boot_command": [
                "<down><wait>",
                "automatic=method:http,network:dhcp,server:{{.HTTPIP}},directory:/distr ",
                "ai ",
                "curl=http://{{.HTTPIP}}:{{.HTTPPort}}/metadata/",
                "<enter>"
            ],

            "shutdown_command": "sudo shutdown -P now"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "script": "fix_sudoers.sh",
            "environment_vars": [
                "PASS='{{user `ssh_pass`}}'"
            ]
        },
        {
            "type": "file",
            "source": "tmp.cache.conf",
            "destination": "/tmp/tmp.cache.conf"
        },
        {
            "type": "file",
            "source": "rc.apt",
            "destination": "/tmp/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo mv /tmp/tmp.cache.conf /etc/apt/apt.conf.d/tmp.cache.conf"
        },
        {
            "type": "shell",
            "inline": "sudo mv /tmp/rc.apt /etc/rc.d/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo /etc/rc.d/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo apt-get -y update && sudo apt-get -y dist-upgrade"
        },
        {
            "type": "shell",
            "inline": "sudo apt-get -y clean"
        }
    ]
}
