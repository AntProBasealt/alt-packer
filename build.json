{
    "variables": {
        "iso_url": "",
        "iso_checksum": "",
        "iso_checksum_type": "",

        "ssh_user": "",
        "ssh_pass": "",
        "http_port_min": "",
        "http_port_max": ""
    },

    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "vm_name": "alt-server-p8.qcow2",
            "disk_size": 30000,
            "disk_cache": "unsafe",
            "output_directory": "output",
            "headless": false,
            "qemuargs": [
                [ "-m", "2048M" ]
            ],

            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",

            "http_port_min": "{{user `http_port_min`}}",
            "http_port_max": "{{user `http_port_max`}}",

            "ssh_username": "{{ user `ssh_user` }}",
            "ssh_password": "{{ user `ssh_pass` }}",
            "ssh_wait_timeout": "60m",
            "ssh_pty": true,

            "http_directory": "./",

            "boot_wait": "2s",
            "boot_command": [ "<down><wait>automatic=method:http,network:dhcp,server:{{.HTTPIP}},directory:/distr ai curl=http://{{.HTTPIP}}:{{.HTTPPort}}/metadata.kvm/ <enter>" ],

            "shutdown_command": "sudo shutdown -P now"
        },
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Linux_64",
            "vm_name": "alt-server-p8",
            "disk_size": 30000,
            "output_directory": "output",
            "headless": false,
            "keep_registered": false,
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ],

            "iso_url": "http://mirror.yandex.ru/altlinux/p8/images/server/alt-8-server-x86_64.iso",
            "iso_checksum": "719d43ed40dc5774c8e40166746856d5b94e41c5",
            "iso_checksum_type": "sha1",

            "http_port_min": "{{user `http_port_min`}}",
            "http_port_max": "{{user `http_port_max`}}",

            "ssh_username": "{{ user `ssh_user` }}",
            "ssh_password": "{{ user `ssh_pass` }}",
            "ssh_wait_timeout": "60m",
            "ssh_pty": true,

            "http_directory": "./",

            "boot_wait": "5s",
            "boot_command": [
                "<down><wait>",
                "a<wait>u<wait>t<wait>o<wait>m<wait>a<wait>t<wait>i<wait>c<wait>=<wait>m<wait>e<wait>t<wait>h<wait>o<wait>d<wait>:<wait>h<wait>t<wait>t<wait>p<wait>,<wait>n<wait>e<wait>t<wait>w<wait>o<wait>r<wait>k<wait>:<wait>d<wait>h<wait>c<wait>p<wait>,<wait>s<wait>e<wait>r<wait>v<wait>e<wait>r<wait>:<wait>{{.HTTPIP}},<wait>d<wait>i<wait>r<wait>e<wait>c<wait>t<wait>o<wait>r<wait>y<wait>:<wait>/<wait>d<wait>i<wait>s<wait>t<wait>r<wait> ",
                "a<wait>i<wait> ",
                "c<wait>u<wait>r<wait>l<wait>=<wait>h<wait>t<wait>t<wait>p<wait>:<wait>/<wait>/<wait>{{.HTTPIP}}<wait>:<wait>{{.HTTPPort}}/<wait>m<wait>e<wait>t<wait>a<wait>d<wait>a<wait>t<wait>a<wait>.<wait>v<wait>b<wait>o<wait>x<wait>/<wait>",
                "<enter>"
            ],

            "shutdown_command": "sudo shutdown -P now",

            "export_opts":
            [
                "--manifest",
                "--vsys", "0",
                "--description", "descr",
                "--version", "0.1.0"
            ],

            "format": "ova"


        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "script": "fix_sudoers.sh",
            "environment_vars": [
                "PASS='{{user `ssh_pass`}}'"
            ]
        },
        {
            "type": "file",
            "source": "tmp.cache.conf",
            "destination": "/tmp/tmp.cache.conf"
        },
        {
            "type": "file",
            "source": "rc.apt",
            "destination": "/tmp/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo mv /tmp/tmp.cache.conf /etc/apt/apt.conf.d/tmp.cache.conf"
        },
        {
            "type": "shell",
            "inline": "sudo mv /tmp/rc.apt /etc/rc.d/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo /etc/rc.d/rc.apt"
        },
        {
            "type": "shell",
            "inline": "sudo apt-get -y update && sudo apt-get -y dist-upgrade"
        },
        {
            "type": "shell",
            "inline": "sudo apt-get -y clean"
        }
    ]
}
